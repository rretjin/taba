<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom font 적용 -->
    <style name="textViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/spoqa_font_family</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="buttonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/spoqa_font_family</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="editTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/spoqa_font_family</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="radioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/spoqa_font_family</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="checkboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/spoqa_font_family</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="bottomNavigationViewStyle">
        <item name="android:background">@color/white</item>
        <item name="itemIconTint">@drawable/selector_bottom_navigation</item>
        <item name="itemTextColor">@drawable/selector_bottom_navigation</item>
